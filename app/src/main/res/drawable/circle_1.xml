<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/colorPrimary" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
            <stroke
                android:color="@color/colorPrimary"
                android:width="10dp"/>
        </shape>

    </item>

    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/editTextWhite"/>
            <size
                android:width="120dp"
                android:height="120dp"/>
        </shape>

    </item>
</layer-list>